{
  "type": "object",
  "properties": {
    "is_monitor": {
      "type": "identifier",
      "selector": "#monitor",
      "control": "exists"
    },
    "monitoring_layer_data": {
      "type": "string",
      "selector": "#monitor",
      "control": "property.innerText"
    }
  },
  "connect": [
    {
      "match": [
        "is_monitor"
      ],
      "screens": [
        "monitoring_page"
      ]
    }
  ]
}
